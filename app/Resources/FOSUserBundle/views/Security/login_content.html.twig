{% trans_default_domain 'FOSUserBundle' %}



<link href="{{ asset('css/adminloginpanel.css') }}" rel="stylesheet">

<div class="admin-login-panel">
    <div>
        {% set tmp_logo = settings.system|getSetting('logo', 'getFilePath') %}
        {% if tmp_logo %}
            <div class="logo">
                <img src="{{ vich_path_relative_system_settings }}/{{ tmp_logo }}" alt="">
                {#<span class="system-name">energy01pfm</span>#}
            </div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="input-text">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>

            <div class="input-text">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>

            {% if error %}
                <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <input type="submit" class="button" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" style="background-color: {{ settings.system|getSetting('brand_color', 'getValue') }};" />
        </form>
    </div>
</div>