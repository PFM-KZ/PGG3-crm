{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <div id="invoices-panel" class="content">
        <div class="field-group">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Wy≈õlij plik
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_start(form) }}
                            {{ form_end(form) }}

                            <br>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="field-group">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        Wgrane pliki
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {% for key, uploadedFilesGroup in uploadedFilesGroupedByBank %}
                                <h4>{{ key }} ({{ uploadedFilesGroup|length }})</h4>

                                {% if uploadedFilesGroup|length %}
<textarea name="{{ key }}" id="{{ key }}" style="width: 300px; height: 100px;" cols="30" rows="10">{% for uploadedFile in uploadedFilesGroup %}
{{ uploadedFile }}
{% endfor %}</textarea>
                                {% endif %}
                                <br>
                                <br>
                            {% endfor %}
                            <br>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}