{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block head_stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/easyadmin/stylesheet/easyadmin-all.min.css') }}">
    <style>
        {{ easyadmin_config('_internal.custom_css')|raw }}
    </style>
    <link rel="stylesheet" href="{{ asset('bundles/gcrmcrm/css/admin/import.css') }}">
    {#<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">#}
{% endblock %}

{% block content %}
    <script src="{{ asset('bundles/gcrmcrm/js/scripts.js') }}"></script>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="content">
        <div class="field-group">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <b>AUTORYZACJA - tworzenie karty klienta</b>
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                                <style>
                                    .tempstyle label {
                                        cursor: pointer;
                                        margin-top: 10px;
                                        margin-right: 15px;
                                    }
                                    .tempstyle input {
                                        margin-top: 10px;
                                        margin-right: 5px;
                                    }
                                </style>

                                <div class="form-group {% if not form.telephoneCallNumber.vars.valid %}has-error{% endif %} field-text">
                                    <label class="col-sm-2 control-label {% if form.telephoneCallNumber.vars.required %}required{% endif %}" for="{{ form.telephoneCallNumber.vars.id }}">{{ form.telephoneCallNumber.vars.label }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.telephoneCallNumber, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group {% if not form.name.vars.valid %}has-error{% endif %} field-text">
                                    <label class="col-sm-2 control-label {% if form.name.vars.required %}required{% endif %}" for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group {% if not form.surname.vars.valid %}has-error{% endif %} field-text">
                                    <label class="col-sm-2 control-label {% if form.surname.vars.required %}required{% endif %}" for="{{ form.surname.vars.id }}">{{ form.surname.vars.label }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group {% if not form.pesel.vars.valid %}has-error{% endif %} field-text">
                                    <label class="col-sm-2 control-label {% if form.pesel.vars.required %}required{% endif %}" for="{{ form.pesel.vars.id }}">{{ form.pesel.vars.label }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.pesel, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group {% if not form.contractTypes.vars.valid %}has-error{% endif %} field-choice">
                                    <label class="col-sm-2 control-label required">Wybierz umowy</label>
                                    <div class="col-sm-10">
                                        <div class="tempstyle">
                                            {{ form_widget(form.contractTypes) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group {% if not form.statusAuthorization.vars.valid %}has-error{% endif %} field-choice">
                                    <label class="col-sm-2 control-label required">Wybierz status</label>
                                    <div class="col-sm-10">
                                        <div class="tempstyle">
                                            {{ form_widget(form.statusAuthorization) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group field-textarea">
                                    <label class="col-sm-2 control-label {% if form.commentAuthorization.vars.required %}required{% endif %}" for="{{ form.commentAuthorization.vars.id }}">{{ form.commentAuthorization.vars.label }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.commentAuthorization, { 'attr': {'class': 'form-control'} }) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.save, { 'attr': { 'class': 'btn btn-primary' } }) }}
                                    </div>
                                </div>



                            {{ form_end(form) }}



                        </div>
                    </div>
                </div>
            </div>
        </div>


